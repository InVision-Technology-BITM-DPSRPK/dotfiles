#
# wm independent hotkeys
#

# terminal emulator
super + Return
	gnome-terminal

# make sxhkd reload its configuration files:
super + ctrl + r
	pkill -USR1 -x sxhkd

super + t
    texed

#
# bspwm hotkeys
# 

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# move windows
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# fullscreen toggle
super + f
	bspc node -t fullscreen
super + shift + f
	bspc node -t tiled

#
# focus/swap
#


# focus the next/previous node in the current desktop
super + alt + {h,l}
	bspc node -f {next,prev}.local

# focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' --follow

# Application Launchers

# launch launcher
super + r
	sh $HOME/.config/rofi/launchers/type-4/launcher.sh

# launch web browser
super + b
	firefox

# launch file explorer
super + e
        gnome-terminal -- bash -c "ranger; exec bash"

# launch mail application
super + m
	thunderbird

# launch screen reader
super + o
	orca

# quit screen reader
super + shift + o
	killall orca

# screenshot

# take a screenshot and copy to clipboard
super + p
    gnome-screenshot -cf /tmp/my-screenshot && cat /tmp/my-screenshot | xclip -i -selection clipboard -target image/png

# system

# reboot/shut down the system
super + shift + {r,s}
	systemctl {reboot,poweroff}

# logout session
super + shift + l
	nwgbar

# controls

XF86AudioLowerVolume
	amixer set Master 5%-
XF86AudioRaiseVolume
	amixer set Master 5%+
XF86AudioMute
    amixer set Master toggle
